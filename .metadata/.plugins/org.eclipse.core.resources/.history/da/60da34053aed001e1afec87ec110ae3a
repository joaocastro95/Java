package cursoProgramacao;

import java.util.Scanner;

public class Trapezio {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println();
		double b, B, h, area;
		
		b = 6.0;
		B = 8.0;
		h = 5.0;
		
		area = ((b+B)/2)*h;
		
		System.out.println(area);
	}

}
